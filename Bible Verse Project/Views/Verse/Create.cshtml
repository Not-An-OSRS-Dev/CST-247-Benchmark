@model Bible_Verse_Project.Models.BibleVerse

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BibleVerse</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DoCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <b style="position:relative; top:30px; left: 10px">Old Testament</b>
                <input asp-for="Testament" type="radio" value="Old Testament" class="form-control"><br />
                <b style="position:relative; top:30px; left: 10px">New Testament</b>
                <input asp-for="Testament" type="radio" value="New Testament" class="form-control" /><br />
                <span asp-validation-for="Testament" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book" class="control-label"></label>
                <input asp-for="Book" class="form-control" />
                <span asp-validation-for="Book" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Chapter" class="control-label"></label>
                <input asp-for="Chapter" class="form-control" step="1" min="1"/>
                <span asp-validation-for="Chapter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Verse" class="control-label"></label>
                <input asp-for="Verse" class="form-control" step="1" min="1"/>
                <span asp-validation-for="Verse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
